/* pages/personal/personal.wxss */
.avatar{
  width: 100vw;
  height: 300rpx;
  background: #0cb7f5;
  color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.avatar image{
  height: 150rpx;
  width: 150rpx;
  border-radius: 50%;
  margin-bottom: 30rpx;
}
.info .section{
  display: flex;
  justify-content: space-between;
  margin: 0 30rpx;
  border-bottom: 1px solid #ddd;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
}