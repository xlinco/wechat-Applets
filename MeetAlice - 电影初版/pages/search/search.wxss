/* pages/search/search.wxss */
@import "../../templates/movie-templates/movie-templates.wxss";
/* 搜索框 */
.search_box{
  position: fixed;
  top: 0;
  display: flex;
  align-items: center;
  width: 100vw;
  height: 100rpx;
  background: #0cb7f5
}
  
.search_content{
  display: flex;
  flex: 1;
  background: #eee;
  margin-left: 30rpx;
  padding: 6rpx;
  align-items: center;
  border-radius: 3px;
}
.search_content .search_icon{
  margin:0 10rpx;
}
.search_content .search_input{
  flex: 1;
  font-size: 28rpx;
}
.cancel{
  width: 120rpx;
  text-align: center;
  color: #fff;
  font-size: 30rpx;
}
/* 列表 */
.movie_scroll{
  position: fixed;
  top: 100rpx;
}
.movie_list{
  display: flex;
  flex-wrap: wrap;
  padding-bottom: 30rpx;
}

.movie_item{
  width: 200rpx;
  margin: 20rpx 0 0 37.5rpx;
}
.movie_item .movie_img{
  width: 200rpx;
  /* height: 100%; */
}
image{
  width: 100%;
  height: 100%;
}