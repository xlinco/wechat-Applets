/* pages/movie-detail/movie-detail.wxss */
@import "../../templates/movie-templates/movie-templates.wxss";
page{
  background: #faf6f3;
}
container{

}
/* 摘要 */
.summary{
  display: flex;
  margin: 30rpx;
}
.movie_img{
  width: 200rpx;
  height: 280rpx;
  border-radius: 8rpx;
  border: 1px solid #eee;
  margin-right: 30rpx;
  box-shadow: 1px 3px 5px 0 rgba(0, 0, 0, .3);
}
.movie_img image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}
.movie_info{
  flex: 1;
  display: flex;
  flex-direction: column;
}
.movie_info .movie_name{
  /* font-size: 23px; */
  margin-bottom: 30rpx;
}
.movie_info .movie_category{
  font-size: 14px;
  color: #999;
  margin-bottom: 10rpx;
}
.star_box{
  justify-content: left;
}
.star_box .star_score{
  font-size: 23px;
  color: #999;
}
.star_box .icon-xingxing{
  font-size: 18px;
}

/* 详情 */
.intro{
  margin: 0 30rpx 40rpx;
  padding-top: 20rpx;
}
.intro .title{
  font-size: 16px;
  font-weight: 500;
  color: #000;
  margin-bottom: 12rpx;
}
.description .content{
  font-size: 13px;
  color: #333;
}
/* 演员 */
.actor .content{
  font-size: 13px;
  color: #333;
}
.movie-actor{
  display: flex;
}
.movie-actor .item{
  display: flex;
  flex-direction: column;
  width: 160rpx;
  text-align: center;
  margin-right: 30rpx;
}
.movie-actor .item .item-image{
  width: 160rpx;
  height: 220rpx;
  border-radius: 8rpx;
  border: 1px solid #ddd;
  margin-bottom: 10rpx;
}
.movie-actor .item .name{
  font-size: 12px;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.movie-actor .item .role{
  font-size: 11px;
  color: #999;
}